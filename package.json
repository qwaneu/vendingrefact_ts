{
  "author": "QWAN",
  "name": "vendingmachine_ts",
  "description": "exercise for typescript unit testing with jasmine",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "ssh://git.qwan.it/home/git/exercises/vendingrefact_ts.git"
  },
  "watch": {
    "test": {
      "patterns": [
        "src"
      ],
      "extensions": "ts",
      "quiet": true
    }
  },
  "scripts": {
    "build": "tsc && npm run tslint",
    "test": "jasmine-ts \"**/*_spec.ts\"",
    "watch_test": "npm-watch test",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "engines": {
    "node": "~6.9.4"
  },
  "dependencies": {
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@types/jasmine": "^2.8.6",
    "@types/lodash": "^4.14.102",
    "@types/node": "^9.4.6",
    "jasmine": "~2.8.0",
    "jasmine-node": "^3.0.0",
    "jasmine-ts": "^0.2.1",
    "npm-watch": "^0.3.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  }
}
