{
  "author": "QWAN - Quality Without a Name",
  "name": "vendingmachine_ts",
  "description": "Exercise for code smells & refactoring with TypeScript and Jasmine",
  "version": "1.0.2",
  "repository": {
    "type": "git",
    "url": "git@github.com:qwaneu/vendingrefact_ts.git"
  },
  "watch": {
    "test": {
      "patterns": [
        "src"
      ],
      "extensions": "ts",
      "quiet": true
    }
  },
  "scripts": {
    "build": "tsc && npm run tslint",
    "test": "ts-node node_modules/jasmine/bin/jasmine \"**/*_spec.ts\"",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "dependencies": {
    "lodash": "^4.17.20",
    "ts-node": "^9.1.1"
  },
  "devDependencies": {
    "npm-check": "^5.9.2",
    "@types/jasmine": "^3.6.2",
    "@types/lodash": "^4.14.165",
    "@types/node": "^12.14.14",
    "jasmine": "~3.6.3",
    "jasmine-node": "^3.0.0",
    "npm-watch": "^0.7.0",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  }
}
