{
  "author": "QWAN",
  "name": "vendingmachine_ts",
  "description": "exercise for code smells & refactoring with TypeScript and Jasmine",
  "version": "1.0.1",
  "repository": {
    "type": "git",
    "url": "git@github.com:qwaneu/vendingrefact_ts.git"
  },
  "watch": {
    "test": {
      "patterns": [
        "src"
      ],
      "extensions": "ts",
      "quiet": true
    }
  },
  "scripts": {
    "build": "tsc && npm run tslint",
    "test": "ts-node node_modules/jasmine/bin/jasmine \"**/*_spec.ts\"",
    "watch_test": "npm-watch test",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "dependencies": {
    "lodash": "^4.17.19",
    "ts-node": "^8.5.4"
  },
  "devDependencies": {
    "@types/jasmine": "^3.5.0",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.14",
    "jasmine": "~3.5.0",
    "jasmine-node": "^3.0.0",
    "npm-watch": "^0.6.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.3"
  }
}
